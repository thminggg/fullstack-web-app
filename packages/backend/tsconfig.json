{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES5",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@/data/*": ["./src/data/*"],
      "@/types/*": ["./src/types/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
